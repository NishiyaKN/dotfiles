# mpd toggle
super + shift + m
	pkill -9 mpd || mpd

# mpc controls
super + period 
	mpc next

super + comma
	mpc prev

super + shift + period
	mpc toggle

# toggle microphone
XF86AudioMicMute
	amixer set Capture toggle

# emoji
super + slash
	rofi -show emoji

